<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
    >
    <LinearLayout
        android:id="@+id/layoutMenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btnNewGoods"
            android:text="新品"
            android:drawableTop="@drawable/menu_item_new_good_normal"
            style="@style/MyThem"/>
        <Button
            android:id="@+id/btnBoutique"
            android:text="精选"
            android:drawableTop="@drawable/boutique_normal"
            style="@style/MyThem"/>
        <Button
            android:id="@+id/btnCategory"
            android:text="分类"
            android:drawableTop="@drawable/menu_item_category_normal"
            style="@style/MyThem"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="#fff">
            <Button
                android:id="@+id/btnCart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/menu_item_cart_normal"
                android:text="购物车"
                android:textSize="16sp"
                android:background="@null"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10"
                android:textColor="#FF0F1E25"
                android:background="@drawable/bg_hint"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btnContact"
            android:text="联系人"
            android:drawableTop="@drawable/menu_item_personal_center_normal"
            style="@style/MyThem"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutMenu"
        />
</RelativeLayout>
