<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_margin="5dp"
              android:id="@+id/layout_good"
              android:weightSum="1"
    >
    <ImageView
        android:id="@+id/niv_good_thumb"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/nopic"
        android:layout_weight="0.42"/>

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tv_good_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="@color/item_good_text"
        android:textSize="13sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="商品名称商品名称商品名称商品名称商品名称商品名称商品名称商品名称"
        />
    <TextView
        android:id="@+id/tv_good_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/item_good_price"
        android:textSize="13sp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="$399.99"/>

</LinearLayout>
